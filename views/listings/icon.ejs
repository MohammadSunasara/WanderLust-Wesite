<style>
#filter {
  display: flex;
  flex-wrap: nowrap;
  overflow-x: auto; /* Enable horizontal scrolling */
  -webkit-overflow-scrolling: touch; /* Smooth scrolling for touch devices */
  padding: 10px;

}

/* Ensure filter items are not affected */
.filter {
  margin: 0 10px; /* Adjust spacing if needed */
}

/* Mobile view adjustments */
@media (max-width: 768px) {
  #filter {
    flex-direction: row; /* Ensure items are in a row */
    white-space: nowrap; /* Prevent line breaks */
  }
  .tax-btn{
    display: none;
  }
  .filter div {
    font-size: 1.5rem; /* Larger icon size for mobile */
  }
}
.filter {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 10px;
  background-color: #ffffff; /* Default background */
  border-radius: 5px;
  transition: background-color 0.3s; /* Smooth transition for background color */
}

/* Active state styling */
.filter.active {
  background-color: lightgrey; /* Background color when active */
}

/* Remove default outline and box shadow */
.filter:focus {
  outline: none;
  box-shadow: none;
}

/* Container for filter items */


/* Ensure filter items have spacing */
.filter {
  margin: 0 10px; /* Adjust spacing between filter items */
}

/* Mobile view adjustments */
@media (max-width: 768px) {
  #filter {
    flex-direction: row; /* Ensure items are in a row */
    white-space: nowrap; /* Prevent line breaks */
  }

  .filter div {
    font-size: 1.5rem; /* Adjust icon size for mobile */
  }

  .tax-btn {
    display: none; /* Hide the tax button in mobile view */
  }
}
.tax-btn{
  margin-right:auto;
}





</style>


