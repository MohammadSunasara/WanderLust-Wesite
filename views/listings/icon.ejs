<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 show-cards">
  
    <% for (let listing of filteredListings) { %>
        <a href="/listings/<%= listing.id %>" class="listing-a">
            <div class="card col listing-card">
             
                <img src="<%= listing.image.url %>" class="card-img-top" alt="Listing image">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                    <p class="card-text ms-4">
                        <h5>Title: <b><%= listing.title %></b></h5>
                       <h6>Price: â‚¹ <%= listing.price %> / night</h6> 
         
                        <h6>Location: <%= listing.location %></h6>
